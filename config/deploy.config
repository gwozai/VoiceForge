# TTS Website 部署配置文件
# 用于自定义部署脚本的行为

# Docker配置
DOCKER_USERNAME="gwozai"
IMAGE_NAME="tts-website"

# 代理配置
USE_PROXY=true
PROXY_HOST="127.0.0.1"
PROXY_PORT="7897"

# 构建配置
BUILD_ARGS=""
DOCKERFILE_PATH="."

# 推送配置
PUSH_LATEST=true
PUSH_VERSION=true

# 测试配置
TEST_IMAGE=false
TEST_PORT="8081"
TEST_TIMEOUT=30

# 清理配置
CLEANUP_AFTER_PUSH=false
KEEP_IMAGES=3

# 通知配置（可选）
NOTIFY_SUCCESS=false
NOTIFY_WEBHOOK=""

# Git配置
AUTO_TAG=false
AUTO_COMMIT=false
COMMIT_MESSAGE="chore: deploy version"

# 日志配置
LOG_FILE="deploy.log"
VERBOSE=false
